*, *:before, *:after
	box-sizing: border-box
	margin: 0
	padding: 0

noselect()
	-webkit-touch-callout: none
	-webkit-user-select: none
	-khtml-user-select: none
	-moz-user-select: none 
	-ms-user-select: none 
	user-select: none 
	-webkit-tap-highlight-color: rgba(255, 255, 255, 0)

.btn
	text-align: center
	display: block
	position: relative
	flex-grow: 1
	height: 0
	flex-basis: button-size
	padding-bottom: button-size
	position: relative
	
.btn a
	noselect()
	position: absolute
	top: 0
	left: 0
	width: 100%
	height: 100%
	display: flex
	align-items: center
	justify-content: center
	font-size: 3em
	
	cursor: pointer

	&:focus, &:hover
		z-index: 1
		
	&:active
		box-shadow: inset 0px -2px 10px rgba(0,0,0,0.04)
		
	&.color
		&:hover
			box-shadow: 0px 2px 10px rgba(0,0,0,0.1), inset 0px 0px 0px rgba(0,0,0,01)
		&:active
			box-shadow: inset 0px 2px 10px rgba(0,0,0,0.1) 