#config
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	display: flex
	flex-direction: column
	align-items: stretch
	textarea
		flex-grow: 1
		border: none
		font-size: 1.5em
		padding: 2em
		
	button
		background: color-blue
		border: none
		font-size: 2.5em
		color: white
		min-height: button-size
		flex-basis: button-size

	button:disabled 
		background: color-red
		opacity: 0.5

	.seller, .basic
		max-width: 50vw
		min-width: 50vw
		align-self: center
		margin: 20px
		padding: 30px
		box-shadow: 0px 3px 10px rgba(0,0,0,.1)
		display: flex
		flex-direction: column
		
	input
		min-height: button-size * 0.5
		padding: 15px
		border: none
		font-size: 1.4em
		border-bottom: 3px solid rgba(0,0,0,0.1)

		margin-bottom: 15px

	.checkbox
		font-family: "Montserrat", sans-serif
		align-items: center

		padding: 15px

		[type="checkbox"]
			display: none

		[type="checkbox"]:checked + span:before
			border-color: color-blue
			color: color-blue
			content: "\2713"

		span:before
			display: flex
			align-content: center
			justify-content: center
			line-height: 1.2em
			content: ""
			width: button-size * 0.3
			height: button-size * 0.3
			border: 3px solid rgba(0,0,0,0.15)
			margin-right: 10px

		span
			display: flex
			
			opacity: 0.7
			font-size: 1.6em
			font-weight: 500
			noselect()