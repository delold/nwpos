#config
	display: flex
	flex-direction: column
	align-items: stretch
	background: #333

	textarea
		flex-grow: 1
		border: none
		font-size: 1.5em
		padding: 2em

	h2
		font-weight: 400
		font-size: 2em
		margin: 60px auto 30px
		position: relative

		&:first-child
			margin-top: 10px

		&:before, &:after
			content: ""
			display: block
			width: calc(335px - 50%)
			height: 3px
			background: rgba(0,0,0,.7)

			position: absolute
			top: 50%
			margin-top: -1.5px

		&:before
			right: 100%
			margin-right: 20px
		&:after
			left: 100%
			margin-left: 20px

	button
		background: color-blue
		border: none
		font-size: 1.8em
		color: white
		min-height: button-size
		flex-basis: button-size
		cursor: pointer

		&:active
			background: darken(color-blue, 10%)

	.seller
		background: white
		color: #333
		max-width: 50vw
		min-width: 800px
		align-self: center
		margin: 100px 0
		padding: 30px
		margin-bottom: 0
		box-shadow: 0px 3px 10px rgba(0,0,0,.1)
		display: flex
		flex-direction: column
		
	input
		min-height: button-size * 0.5
		padding: 15px
		border: none
		font-size: 1.4em
		border-bottom: 3px solid rgba(0,0,0,0.1)

		margin-bottom: 15px

	.checkbox
		font-family: "Montserrat", sans-serif
		align-items: center

		padding: 15px

		[type="checkbox"]
			display: none

		[type="checkbox"]:checked + span:before
			border-color: color-blue
			color: color-blue
			content: "\2713"

		span:before
			display: flex
			align-content: center
			justify-content: center
			line-height: 1.2em
			content: ""
			width: button-size * 0.3
			height: button-size * 0.3
			border: 3px solid rgba(0,0,0,0.15)
			margin-right: 10px

		span
			display: flex
			
			opacity: 0.7
			font-size: 1.6em
			font-weight: 400
			noselect()
	.eet
		display: flex
		.login
			flex-grow: 1
			display: flex
			flex-direction: column
		.status
			flex-basis: 140px
			height: 140px

			padding: 15px
			fill: rgba(0,0,0,0.3)
	.buttons
		max-width: 50vw
		min-width: 800px
		align-self: center
		margin-bottom: 150px
		display: flex

		noselect()
		button
			flex-grow: 1
			outline: none

	.buttons .save.done
		background: color-green
		cursor: default
		&:active
			background: color-green

	.buttons .return
		background: color-orange
		&:active
			background: darken(color-orange, 10%)