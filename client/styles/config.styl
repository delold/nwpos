#config
	display: flex
	flex-direction: column
	align-items: stretch
	background: #212121

	textarea
		flex-grow: 1
		border: none
		font-size: 1.5em
		padding: 2em

	h2
		font-weight: 400
		font-size: 2em
		margin: 40px auto 20px
		position: relative

		&:first-child
			margin-top: 0
		&:before, &:after
			content: ""
			display: block
			width: 150px
			height: 3px
			background: rgba(0,0,0,.7)

			position: absolute
			top: 50%
			margin-top: -1.5px

		&:before
			right: 100%
			margin-right: 20px
		&:after
			left: 100%
			margin-left: 20px


	button
		background: color-blue
		border: none
		font-size: 2.5em
		color: white
		min-height: button-size
		flex-basis: button-size

	button:disabled 
		background: color-red
		opacity: 0.5

	button:active
		background: darken(color-blue, 10%)

	.seller
		background: white
		
		max-width: 50vw
		min-width: 50vw
		align-self: center
		margin: 20px
		padding: 30px
		box-shadow: 0px 3px 10px rgba(0,0,0,.1)
		display: flex
		flex-direction: column
		
	input
		min-height: button-size * 0.5
		padding: 15px
		border: none
		font-size: 1.4em
		border-bottom: 3px solid rgba(0,0,0,0.1)

		margin-bottom: 15px

	.checkbox
		font-family: "Montserrat", sans-serif
		align-items: center

		padding: 15px

		[type="checkbox"]
			display: none

		[type="checkbox"]:checked + span:before
			border-color: color-blue
			color: color-blue
			content: "\2713"

		span:before
			display: flex
			align-content: center
			justify-content: center
			line-height: 1.2em
			content: ""
			width: button-size * 0.3
			height: button-size * 0.3
			border: 3px solid rgba(0,0,0,0.15)
			margin-right: 10px

		span
			display: flex
			
			opacity: 0.7
			font-size: 1.6em
			font-weight: 400
			noselect()