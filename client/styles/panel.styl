.panel
	box-shadow: 0px -2px 10px rgba(0,0,0,0.05)
	
	// min-height: button-size * 2
	// flex-basis: button-size * 2

.names
	height: button-size	
	display: flex
	
	overflow-x: auto
	overflow-y: hidden
	
	
	align-items: center
	
	
	background: rgba(0,0,0,0.01)
	border-top: 1px solid rgba(0,0,0,0.1)
	
	padding-left: (button-size / 2) - (button-size / 4) + (5px / 2)
	
	.suggestion
		
		noselect()
			
		height: (button-size / 2) - 5px
		cursor: pointer
		padding: 0px 15px
		background: #fff
		white-space: nowrap
		border: 1px solid rgba(0,0,0,0.1)
		box-shadow: 0px 1px 5px rgba(0,0,0,0.1)
				
		display: flex
		align-items: center
		justify-content: center
		border-radius: 5px
		
		margin-right: 15px
		text-transform: capitalize
		
		&:last-child
			margin-right: 0
			

	&:after
		content: ""
		height: button-size
		flex-basis: (button-size / 2) - (button-size / 4) + (5px / 2)
		min-width: (button-size / 2) - (button-size / 4) + (5px / 2)

	
.actions
	display: flex
	
	> .btn
		font-size: 0.5em
		color: #ffffff
		background: color-gray
		position: relative
		
		svg
			width: 1.2em
			height: 1.2em
			
		svg path
			fill: #ffffff
		
	.checkout, .total, .total + .status
		font-size: 0.4em

	.small
		max-width: button-size
		
	.total
		background: color-purple

		a.tapped { background: darken(color-purple, 5%) }	
			
	.checkout, .edit, .print
		background: color-blue

		a.tapped { background: darken(color-blue, 5%) }	
		
	.qty
		background: color-yellow

		a.tapped { background: darken(color-yellow, 5%) }
		
	.clear
		background: color-darkred

		a.tapped { background: darken(color-darkred, 5%) }
		
	.discount
		background: color-orange

		a.tapped { background: darken(color-orange, 5%) }

	.status, .status.positive
		background: color-green

		a.tapped { background: darken(color-green, 5%) }

	.status.negative
		background: color-orange

		a.tapped { background: darken(color-orange, 5%) }
