.popup
	position: fixed
	top: 0
	left: 0
	right: 0
	bottom: 0
	background: rgba(0,0,0,0.6)
	z-index: 5
	
	display: flex
	align-items: flex-start
	justify-content: center
	
	font-size: 14px
	
	.inside
		background: #ffffff
		width: 100%
		
		position: relative
		box-shadow: 0px 2px 10px rgba(0,0,0,0.5)
		
	.inside .header
		display: flex
		
		font-size: 1em
		font-weight: 300
		background: color-gray
		color: white
		
		text-transform: lowercase

	.heading
		display: flex
		flex-direction: column
		height: button-size * 0.8
		width: "calc(100% - %s)" % (button-size * 0.8)
		font-size: 2em
		
		position: relative
		padding-left: 1em
		
		span
			font-size: .6em
			color: black
			padding: 8px 0 0px
			opacity: 0.4
				

	.heading .input
		width: 100%
		margin-left: -1em
		flex-grow: 1
		
		display: flex
		align-items: flex-end
		justify-content: center
		
		padding: .5em 1em
		
		input
			font-size: 1.2em
			color: white
			width: 100%
			border: none
			background: transparent
			border-bottom: 3px solid rgba(0,0,0,0.1)
			height: 100%
			outline: none
			
		input::-webkit-input-placeholder
			color: rgba(0,0,0,0.2)
		
	.inside .content
		max-height: 40vh
		overflow-y: auto
		overflow-x: hidden
		font-size: 2em
		
	.buttons
		display: flex
		
		> *
			outline: none
			
			display: flex
			text-align: center
			align-items: center
			justify-content: center
			min-width: button-size * 0.8
			height: button-size * 0.8
				
			font-size: 5em
			font-weight: 300
			
			cursor: pointer
			border: 0
			
		.close
			background: color-orange
	
		.ok
			background: color-green
			
		svg
			width: .8em
			height: .8em
			
		svg path
			fill: #ffffff
			
			
	.content .groups
		padding: 1em 1em .5em
		
		.group
			display: flex
		
		ul
			list-style: none
			display: flex
			flex-wrap: wrap

		.item
			noselect()
			display: flex
			align-items: center
			height: (button-size / 2) - 5px 
			padding: 0 .5em
			border: 1px solid rgba(0,0,0,0.1)
			margin-right: .5em
			margin-bottom: .5em
			border-radius: 3px
			box-shadow: 0px 2px 4px rgba(0,0,0,0.05)
			cursor: pointer
		
		.groupname
			noselect()
			margin-right: .5em
			display: flex
			align-items: center
			justify-content: center			
			height: (button-size / 2) - 5px
			min-width: (button-size / 2) - 5px

						
			text-transform: uppercase
			color: #ffffff
			
			background: color-gray