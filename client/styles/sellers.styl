.sellers-panel 
    display: flex
    flex-direction: column

    min-height: button-size * 0.8
    max-height: button-size * 0.8

    @media (max-width: query--small)
        min-height: button-size--small
        max-height: button-size--small

    overflow: hidden

    background: rgba(0,0,0,0.01)
    box-shadow: 0px 1px 0px rgba(0,0,0,0.1), 0px 2px 10px rgba(0,0,0,0.05)

    .seller
        padding-left: button-size * 0.2
        min-height: button-size * 0.8
        height: button-size * 0.8

        @media (max-width: query--small)
            padding-left: button-size--small * 0.2
            min-height: button-size--small
            height: button-size--small

        display: flex
        flex-direction: column
        justify-content: center
        cursor: pointer

        line-height: 1em

        &.active
            order: -1

        &.tapped
             background: rgba(0,0,0,0.1)
        > *
            pointer-events: none

        noselect()

         
    .seller .ic
        font-size: 0.7em