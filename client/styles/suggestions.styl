.suggestions
    display: flex
    flex-direction: column
    font-size: 1.5em
    .item
        display: flex
        align-items: center
        box-shadow: inset 0px 1px 0px rgba(0,0,0,0.1)
    .item .name
        padding-left: 30px
        flex-grow: 1
        text-transform: capitalize

    .item .bought
        margin-right: 20px

    .item .avg
        text-align: right
        min-width: 20%
        flex-basis: 20%

    .item .delete
        flex-grow: 0
        margin-left: 2em
        font-size: 0.5em
        color: #ffffff
        background: color-darkred
        position: relative

        svg
            width: 1.2em
            height: 1.2em
            
        svg path
            fill: #ffffff

        a *
            pointer-events: none

        a.tapped
            background: darken(color-darkred, 5%)
