body
	font-family: sans-serif
*, *:before, *:after
	box-sizing: border-box

#root
	background: #212121
	
	position: absolute
	top: 0
	left: 0
	right: 0
	bottom: 0
	
	display: flex
	align-items: center
	justify-content: center

#root .step
	width: 50%
	flex-basis: 50%
	
	min-width: 350px
	padding: 3em
	
	color: white
	
	display: flex
	flex-direction: column
	justify-content: center
	
	align-items: center
	
		
	
	&:not(.show)
		display: none

	h1
		text-align: center
		margin: 0
		
	h2
		font-weight: normal
		text-align: center
		font-size: 1.2em
		
	.buttons
		margin-top: 10px
		display: flex
	
	.buttons .button
		background: white
		padding: 1em 1.5em
		text-transform: uppercase
		font-variant: small-caps
		font-size: 0.9em
		font-weight: bold
		
		border-radius: .3em
		box-shadow: 0px .5em 1em rgba(0,0,0,0.1)
		
		margin-right: 1em
		color: #fff
		
		background: #607D8B
		
		&:last-child
			margin-right: 0
			
	.image > *
		width: 250px
		
		path
			fill: white


#root .detect
	.image > *
		margin: 90px 0px
		width: 70px
		
	.list
		max-height: 400px
		overflow: hidden
		overflow-y: auto
		display: block

	.image
		display: none
		
	.list .server
		min-width: 350px
		padding: 1.2em 1.3em
		border-bottom: 1px solid rgba(255,255,255,0.2)
		
	.list .server .ip
		font-size: 1.2em
		margin-bottom: 0.2em
		

	&.loading
		.list
			display: none
		.image
			display: block
		

#root .install
	.image > *
		margin: 90px 0px
		width: 70px
		
		&:first-child
			display: block
		&:last-child
			display: none
			
	h1 + h1, h2 + h2, .buttons
		display: none
			
	&.error 
		h1, h2
			display: none
		h1 + h1, h2 + h2
			display: block
		.buttons
			display: flex
			
		.image > *
			margin: 10px
			width: 250px
			&:first-child
				display: none
			&:last-child
				display: block
	
.spinner
	animation: rotator 1.4s linear infinite
	

	
@keyframes {rotator}
	0%
		transform: rotate(0deg)
	100%
		transform: rotate(270deg)
.path
	stroke-dasharray: 187
	stroke-dashoffset: 0
	transform-origin: center
	stroke: white
	animation: dash 1.4s ease-in-out infinite

@keyframes {dash}
	0%
		stroke-dashoffset: 188
	50%
		stroke-dashoffset: (188 / 4)
		transform: rotate(135deg)
	100%
		stroke-dashoffset: 188
		transform: rotate(450deg)