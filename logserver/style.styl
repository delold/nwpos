body
    margin: 0
    background: #212121
    padding: 20px

#console
    color: #bbb
    max-height: 78vh
    min-height: 78vh
    margin-bottom: 2vh
    overflow: auto
    font-family: monospace

    > *
        margin: 0
        display: flex
        justify-content: flex-start

    .content
        margin: 0
        max-width: 100vw
        word-wrap: break-word
        white-space: pre-wrap

    .date 
        flex-basis: 160px
        min-width: 160px
        color: #555

    .tag
        flex-basis: 120px
        min-width: 120px
        display: inline-block

#controls
    display: flex
    background: white
    padding: 25px
    border-radius: 4px

    .actions
        display: flex
        justify-content: flex-end
        flex-grow: 1

        button
            padding: .4em 1em
            font-size: 18px
            margin-left: 10px