{
    "apps": [{
        "name": "SERVER",
        "script": "index.js",
        "env": {
            "NWPOS_PORT": 8080,
            "NWPOS_DISPLAY": "python ./customer/app.py",
            "BONJOUR": true
        },
        "env_android": {
            "NWPOS_PORT": 8080,
            "BONJOUR": true
        },
        "env_dev:": {
            "NWPOS_PORT": 81,
            "NWPOS_DEV": "python ./customer/app.py 800 600 --windowed",
            "NWPOS_DISPLAY": false,
            "BONJOUR": false
        }
    }],
    "deploy": {
        "production": {
            "user": "pi",
            "repo": "git@github.com:delold/nwpos.git",
            "path": "/home/pi/nwpos",
            "ssh_options": "StrictHostKeyChecking=no",
            "pre-setup": "apt-get install python-pygame git",
            "post-deploy": "pm2 startOrRestart ecosystem.json",
            "env": {
                "NWPOS_PORT": 8080,
                "NWPOS_DISPLAY": "python ./customer/app.py",
                "BONJOUR": true
            }
        }
    }
}